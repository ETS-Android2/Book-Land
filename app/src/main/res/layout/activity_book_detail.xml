<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.BookDetail">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="220dp"
                android:id="@+id/cardview"
                app:cardCornerRadius="4dp"
                android:layout_margin="10dp">
                <ImageView
                    android:id="@+id/img_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#424242"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_toRightOf="@+id/cardview"
                android:layout_margin="10dp">
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="0"
                    android:id="@+id/rating_show"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_marginTop="15dp"
                    android:progressTint="#000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rating_txt"
                    android:layout_toRightOf="@+id/rating_show"
                    android:text="0.0"
                    android:layout_marginTop="13dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rating_show"
                    android:id="@+id/name"
                    android:text="Name"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:layout_margin="4dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:text="Author"
                    android:id="@+id/author"
                    android:layout_margin="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/author"
                    android:text="Genre"
                    android:id="@+id/genre"
                    android:layout_margin="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/genre"
                    android:text="pages"
                    android:id="@+id/pages"
                    android:layout_margin="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pages"
                    android:text="price"
                    android:textSize="17dp"
                    android:textColor="#000000"
                    android:id="@+id/price"
                    android:layout_margin="4dp"/>
            </RelativeLayout>
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="0"
                android:id="@+id/rating_detail"
                style="?android:attr/ratingBarStyleIndicator"
                android:isIndicator="false"
                android:layout_margin="10dp"
                android:progressTint="#000000"
                android:layout_below="@+id/cardview"/>
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/rate_btn"
                android:text="Rate"
                android:layout_below="@+id/cardview"
                android:layout_toEndOf="@+id/rating_detail"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rating_detail"
                android:id="@+id/name_detail"
                android:textSize="24sp"
                android:text="Book Name"
                android:textColor="#000000"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/name_detail"
                android:id="@+id/description_id"
                android:layout_margin="8dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/description_id"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="20dp">
                <Button
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:id="@+id/order_id"
                    android:text="Order"
                    android:textColor="#ffffff"
                    android:textStyle="bold|normal"
                    android:background="#000000"/>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>