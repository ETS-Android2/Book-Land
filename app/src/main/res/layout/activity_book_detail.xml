<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/book_detail"
    tools:context=".Activity.BookDetail">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="220dp"
                android:id="@+id/cardview"
                app:cardCornerRadius="4dp"
                android:layout_margin="10dp">
                <ImageView
                    android:id="@+id/img_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#424242"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_toRightOf="@+id/cardview"
                android:layout_margin="10dp">
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="0"
                    android:id="@+id/rating_show"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_marginTop="15dp"
                    android:progressTint="#000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rating_txt"
                    android:textColor="#000000"
                    android:layout_toRightOf="@+id/rating_show"
                    android:text="0.0"
                    android:layout_marginTop="13dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rating_show"
                    android:id="@+id/name"
                    android:text="Name"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:layout_margin="4dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:text="Author"
                    android:textColor="#121212"
                    android:id="@+id/author"
                    android:layout_margin="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/author"
                    android:text="Genre"
                    android:textColor="#121212"
                    android:id="@+id/genre"
                    android:layout_margin="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/genre"
                    android:text="pages"
                    android:textColor="#121212"
                    android:id="@+id/pages"
                    android:layout_margin="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pages"
                    android:text="price"
                    android:textSize="17dp"
                    android:textColor="#000000"
                    android:id="@+id/price"
                    android:layout_margin="4dp"/>
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/shopping_court"
                android:layout_margin="4dp"
                android:background="#ffff"
                app:cardCornerRadius="8dp"
                android:layout_below="@+id/cardview">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="8dp"
                    android:paddingTop="8dp">
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/name1"
                    android:text="Name"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:maxLines="2"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:layout_width="48dp"
                    android:layout_height="40dp"
                    android:id="@+id/minusBtn"
                    android:textColor="#FFFF"
                    android:background="#00534B"
                    android:layout_below="@+id/name1"
                    android:text="-"
                    android:textStyle="bold"
                    android:textSize="30sp"/>
                <TextView
                    android:layout_width="48dp"
                    android:layout_height="40dp"
                    android:id="@+id/txtCounter"
                    android:background="#00534B"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_below="@+id/name1"
                    android:layout_toEndOf="@+id/minusBtn"
                    android:textColor="#FFFF"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:text="1"/>

                <Button
                    android:layout_width="48dp"
                    android:layout_height="40dp"
                    android:id="@+id/plusBtn"
                    android:textColor="#FFFF"
                    android:background="#00534B"
                    android:layout_below="@+id/name1"
                    android:layout_toEndOf="@+id/txtCounter"
                    android:text="+"
                    android:textSize="30sp"/>
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/add_shopping_btn"
                    android:src="@drawable/add_shopping_cart"
                    android:background="@drawable/add_shopping_btn"
                    android:layout_marginRight="16dp"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="0"
                android:id="@+id/rating_detail"
                style="?android:attr/ratingBarStyleIndicator"
                android:isIndicator="false"
                android:layout_margin="10dp"
                android:progressTint="#000000"
                android:progressBackgroundTint="#000000"
                android:layout_below="@+id/shopping_court"/>
            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:id="@+id/rate_btn"
                android:text="Rate"
                android:textSize="28sp"
                android:textColor="#A60101"
                android:background="#ffff"
                android:layout_margin ="10dp"
                android:layout_below="@+id/shopping_court"
                android:layout_toEndOf="@+id/rating_detail"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rating_detail"
                android:id="@+id/name_detail"
                android:layout_marginTop="30dp"
                android:textSize="24sp"
                android:text="Book Name"
                android:textColor="#000000"
                android:gravity="center"/>

            <TextView
                android:id="@+id/description_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/name_detail"
                android:layout_margin="15dp"
                android:fontFamily="@font/alef"
                android:textColor="#212121"
                android:text="Hello world"
                android:textSize="18sp" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>